<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:id="@+id/rlMain">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minHeight="500dp">
                <RelativeLayout
                    android:paddingTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/relativeLayout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:text="IF"
                        android:id="@+id/tvIf"
                        android:textSize="35sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:paddingTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/relativeLayout2">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/ivIf"
                        android:src="@drawable/ic_device_channel"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:id="@+id/ivThen"
                        android:src="@drawable/ic_facebook_channel"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_plus_signin_btn_text_light_default"
                        android:textStyle="bold"
                        android:paddingRight="40dp"
                        android:id="@+id/tvThen"
                        android:text="THEN"
                        android:textSize="30sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_alignBottom="@+id/ivThen"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="New Text htjgkfdmsjukdmvc stgjemkfdlc"
                    android:id="@+id/tvRecipeName"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="66dp"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignBottom="@+id/relativeLayout2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_above="@+id/tvTrigger"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="42dp"
                    android:weightSum="1">
                <!--<ToggleButton-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/toggleButton"-->
                    <!--android:layout_marginTop="30dp"-->
                    <!--android:layout_below="@+id/relativeLayout2"/>-->

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch1"
                        android:saveEnabled="true"
                        android:enabled="true"
                        android:layout_weight="0.25"
                        android:layout_marginTop="30dp"
                        android:layout_below="@+id/relativeLayout2"/>

                    <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                        android:layout_marginTop="25dp"
                    android:id="@+id/ivArrow"
                    android:src="@drawable/ic_icon_arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pause this Recipe"
                        android:id="@+id/tvToggle"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:text="New Text kavnmk avkasmdc kvma"
                    android:id="@+id/tvTrigger"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>