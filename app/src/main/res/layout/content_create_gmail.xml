<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="android.g38.ritik.CreateGmailActivity"
    tools:showIn="@layout/activity_create_gmail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="To address"
        android:id="@+id/tvAddress"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/tvAddress"
        android:id="@+id/etAddress"
        android:inputType="textEmailAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#EDD1D4"
        android:hint="Separate multiple emails by comma ','"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSubject"
        android:layout_marginTop="20dp"
        android:text="Subject"
        android:layout_below="@id/etAddress"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/tvSubject"
        android:inputType="textEmailSubject"
        android:layout_marginTop="20dp"
        android:background="#EDD1D4"
        android:id="@+id/etSubject"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Body"
        android:layout_below="@id/etSubject"
        android:id="@+id/tvBody"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine"
        android:id="@+id/etBody"
        android:hint="Some html is also allowed!!! ;)"
        android:layout_below="@id/tvBody"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#EDD1D4"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/etBody"
        android:text="Continue"
        android:textSize="20sp"
        android:textStyle="bold|normal"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary"
        android:id="@+id/btnContinue"
        />

</RelativeLayout>
