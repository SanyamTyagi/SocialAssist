<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="android.g38.ritik.Gmail.CreateGmailActivity"
    tools:showIn="@layout/activity_create_gmail">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wid1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/etAddress"
        android:inputType="textEmailAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#EDD1D4"
        android:hint="TO: (Separate multiple emails by comma ',')"
        android:layout_marginTop="10dp"
        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wid2"
        android:layout_below="@id/wid1"
        android:layout_marginTop="30dp"
        >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:inputType="textEmailSubject"
        android:layout_marginTop="40dp"
        android:hint="SUBJECT:"
        android:background="#EDD1D4"
        android:id="@+id/etSubject"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wid3"
        android:layout_below="@id/wid2"
        android:layout_marginTop="30dp"
        >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:inputType="textMultiLine"
        android:id="@+id/etBody"
        android:hint="BODY:"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#EDD1D4"
        />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/wid3"
        android:text="Continue"
        android:textSize="20sp"
        android:textStyle="bold|normal"
        android:textColor="@android:color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary"
        android:id="@+id/btnContinue"
        />

</RelativeLayout>
